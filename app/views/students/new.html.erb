<% form_for :student, :url => students_path do |f| %>
  <p>
    <label for="student_login">Login:</label><br/>
    <%= f.text_field :login %>
  </p>
  <p>
    <label for="student_identity_url">OpenID:</label><br/>
    <%= f.text_field :identity_url %>
  </p>
  <p>
    <label for="student_email">Email:</label><br/>  
    <%= f.text_field :email %>  
  </p>
  <%= f.submit "Signup" %>
<% end %>

